<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQLNV_DL.Views.AdminChangePasswordPage"
             Title="Cài đặt tài khoản"
             BackgroundColor="#F5F6FA">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Image Source="logo.png" HeightRequest="80" HorizontalOptions="Center" Margin="0,0,0,10"/>

            <Label Text="ĐỔI MẬT KHẨU" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="#2C3E50"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,10"/>

            <!-- Mật khẩu cũ -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Mật khẩu hiện tại" FontSize="14" FontAttributes="Bold" Margin="5,0"/>
                <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" BackgroundColor="White" HeightRequest="55">
                    <Entry x:Name="txtOldPass" 
                           Placeholder="Nhập mật khẩu cũ" 
                           IsPassword="True" 
                           VerticalOptions="Center" 
                           Margin="15,0"/>
                </Border>
            </VerticalStackLayout>

            <!-- Mật khẩu mới -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Mật khẩu mới" FontSize="14" FontAttributes="Bold" Margin="5,0"/>
                <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" BackgroundColor="White" HeightRequest="55">
                    <Entry x:Name="txtNewPass" 
                           Placeholder="Tối thiểu 6 ký tự" 
                           IsPassword="True" 
                           VerticalOptions="Center" 
                           Margin="15,0"/>
                </Border>
            </VerticalStackLayout>

            <!-- Xác nhận mật khẩu -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Xác nhận mật khẩu mới" FontSize="14" FontAttributes="Bold" Margin="5,0"/>
                <Border StrokeShape="RoundRectangle 10" StrokeThickness="0" BackgroundColor="White" HeightRequest="55">
                    <Entry x:Name="txtConfirmPass" 
                           Placeholder="Nhập lại mật khẩu mới" 
                           IsPassword="True" 
                           VerticalOptions="Center" 
                           Margin="15,0"/>
                </Border>
            </VerticalStackLayout>

            <Button Text="CẬP NHẬT MẬT KHẨU" 
                    BackgroundColor="RoyalBlue" 
                    TextColor="White" 
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="10"
                    Margin="0,15,0,0"
                    Clicked="OnSavePasswordClicked"/>

            <ActivityIndicator x:Name="loading" 
                               IsRunning="False" 
                               Color="RoyalBlue" 
                               HorizontalOptions="Center"
                               HeightRequest="40"/>

            <Label Text="Lưu ý: Bạn nên sử dụng mật khẩu mạnh để bảo vệ tài khoản." 
                   FontSize="12" 
                   TextColor="Gray" 
                   HorizontalTextAlignment="Center" 
                   Margin="0,10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>